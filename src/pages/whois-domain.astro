---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const title = 'IP / Domain 查詢工具';
const description = '查詢 IP、ISP、位置與 Domain 狀態';
---

<html lang="zh-TW">
  <head>
    <BaseHead title={title} description={description} />

    <style>
      main {
        max-width: 1200px;
        margin: 36px auto;
        padding: 24px;
      }

      .card {
        background: white;
        border: 1px solid #e5e7eb;
        border-radius: 12px;
        padding: 24px;
        margin-bottom: 24px;
      }

      .title {
        font-size: 1.6rem;
        font-weight: bold;
        margin-bottom: 16px;
      }

      /* ==== Form ==== */
      .form-row {
        display: flex;
        gap: 12px;
        margin-bottom: 12px;
      }

      input {
        flex: 1;
        padding: 12px;
        border-radius: 8px;
        border: 1px solid #d1d5db;
        font-size: 1rem;
      }

      button {
        padding: 12px 20px;
        background: #111827;
        color: white;
        border: none;
        border-radius: 8px;
        cursor: pointer;
      }

      button:hover {
        background: #1f2937;
      }

      /* RWD：修正手機輸入框 */
      @media (max-width: 600px) {
        .form-row {
          flex-direction: column;
        }

        button {
          width: 100%;
        }
      }

      /* ==== 結果卡片 ==== */
      .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 16px;
      }

      .item {
        padding: 16px;
        border-radius: 8px;
        background: #f8fafc;
        border: 1px solid #e2e8f0;
      }

      iframe {
        width: 100%;
        height: 350px;
        border: none;
        border-radius: 12px;
      }

      .source {
        text-align: center;
        font-size: 0.9rem;
        color: #6b7280;
        margin-top: 12px;
      }
    </style>
  </head>

  <body>
    <Header />

    <main>
      <!-- IP 查詢區 -->
      <div class="card">
        <div class="title">IP 查詢</div>

        <div class="form-row">
          <input id="ip-input" placeholder="輸入 IP，例如 8.8.8.8" />
          <button id="ip-btn">查詢</button>
        </div>
      </div>

      <!-- 查詢結果 -->
      <div class="card">
        <div class="title">查詢結果</div>
        <div class="grid" id="ip-result"></div>
        <p class="source">資料來源：ipinfo.io • OpenStreetMap</p>
      </div>

      <!-- 地圖 -->
      <div class="card">
        <div class="title">地理位置</div>
        <iframe id="map"></iframe>
      </div>
    </main>

    <Footer />

    <script>
      const token = "1b172809b09566"; // 你的 ipinfo token

      async function fetchIP(ip) {
        const res = await fetch(`https://ipinfo.io/${ip}/json?token=${token}`);
        return res.json();
      }

      const ipBtn = document.getElementById("ip-btn");
      const ipInput = document.getElementById("ip-input");
      const result = document.getElementById("ip-result");
      const map = document.getElementById("map");

      ipBtn.addEventListener("click", async () => {
        const ip = ipInput.value.trim();
        if (!ip) return;

        const data = await fetchIP(ip);

        // loc = "lat,lon"
        let lat = "";
        let lon = "";
        if (data.loc) {
          [lat, lon] = data.loc.split(",");
        }

        result.innerHTML = `
          <div class="item">IP：${data.ip || "N/A"}</div>
          <div class="item">ISP：${data.org || "N/A"}</div>
          <div class="item">國家：${data.country || "N/A"}</div>
          <div class="item">城市：${data.city || "N/A"}</div>
          <div class="item">緯度：${lat || "N/A"}</div>
          <div class="item">經度：${lon || "N/A"}</div>
        `;

        map.src = `https://maps.google.com/maps?q=${lat},${lon}&z=10&output=embed`;
      });
    </script>
  </body>
</html>
