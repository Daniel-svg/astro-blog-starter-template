    }

    let mapInstance = null;

    async function fetchIP() {
      const ipEl = document.getElementById('ip');
      const detailsEl = document.getElementById('details');
      const mapEl = document.getElementById('map');

      if (!mapEl) return;

      ipEl.textContent = 'è¼‰å…¥ä¸­...';
