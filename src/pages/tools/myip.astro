---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const title = '我的 IP 查詢工具';
const description = '快速查詢你的公開 IP 地址與地理位置資訊';
---

<!doctype html>
<html lang="zh-Hant">
<head>
  <BaseHead title={title} description={description} />

  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

  <style>
    /* 命名空間: ip-tool */
    .ip-tool-container {
      max-width: 700px;
      margin: 40px auto;
      padding: 1.5em;
      text-align: center;
    }

    .ip-tool-card {
      background: white;
      padding: 40px;
      border-radius: 18px;
      box-shadow: 0 10px 35px rgba(0,0,0,0.08);
    }

    .ip-tool-title {
      font-size: 1.5rem;
      color: #3a475d;
      margin-bottom: 12px;
      font-weight: 600;
    }

    .ip-tool-address {
      font-size: 2.5rem;
      font-weight: 800;
      color: #2563eb;
      background: #eef4ff;
      padding: 10px 20px;
      border-radius: 12px;
      margin: 0 auto 25px;
      display: inline-block;
      word-break: break-all;
    }

    .ip-tool-details-grid {
      display: grid !important;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)) !important;
      gap: 15px !important;
      margin-bottom: 30px !important;
      text-align: left !important;
      padding: 0 !important;
      box-sizing: border-box !important;
      background: transparent !important;
    }

    .ip-tool-detail-box {
      background-color: #eef4ff !important;
      padding: 15px !important;
      border-radius: 10px !important;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05) !important;
      border: 1px solid #e3ebf5 !important;
      display: flex !important;
      flex-direction: column !important;
      transition: all 0.2s !important;
      box-sizing: border-box !important;
      width: 100% !important;
    }

    .ip-tool-detail-box:hover {
      transform: translateY(-3px);
      box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
    }

    .ip-tool-detail-label {
      font-weight: 600;
      color: #55637a;
      display: flex;
      align-items: center;
      gap: 8px;
      margin-bottom: 5px;
      font-size: 0.9rem;
    }

    .ip-tool-detail-value {
      font-weight: 700;
      color: #1c2a3a;
      font-size: 1.1rem;
      word-break: break-all;
    }

    .ip-tool-flag {
      font-size: 1.5rem;
    }

    #ip-tool-map {
      width: 100%;
      height: 350px;
      margin-top: 30px;
      border-radius: 14px;
      overflow: hidden;
    }

    .ip-tool-reload-btn {
      margin-top: 25px;
      padding: 12px 32px;
      background: #2563eb;
      color: white;
      border: none;
      border-radius: 10px;
      font-size: 1rem;
      cursor: pointer;
      transition: background 0.3s;
    }

    .ip-tool-reload-btn:hover {
      background: #1e40af;
    }

    .ip-tool-data-source {
      margin-top: 30px;
      font-size: 0.85rem;
      color: #55637a;
      text-align: center;
    }

    .ip-tool-data-source a {
      color: #2563eb;
      text-decoration: none;
    }

    .ip-tool-data-source a:hover {
      text-decoration: underline;
    }
  </style>
</head>

<body>
  <Header />

  <main class="ip-tool-container">
    <div class="ip-tool-card">
      <div class="ip-tool-title">你的公開 IP 地址</div>
      <div class="ip-tool-address" id="ip">載入中...</div>

      <div class="ip-tool-details-grid" id="details"></div>
      <div id="ip-tool-map"></div>
    </div>

    <button class="ip-tool-reload-btn" id="reload">重新整理</button>

    <div class="ip-tool-data-source">
      <p>數據來源：</p>
      <p>
        公開 IP 查詢由
        <a href="https://www.ipify.org/" target="_blank" rel="noopener noreferrer">ipify</a>
        提供；地理位置資訊由
        <a href="https://ipinfo.io/" target="_blank" rel="noopener noreferrer">IPinfo</a>
        提供。
      </p>
    </div>
  </main>

  <Footer />

  <script>
    function countryToFlag(countryCode) {
      if (!countryCode) return "❓";
      return countryCode.toUpperCase().replace(/./g, char =>
        String.fromCodePoint(char.charCodeAt(0) + 127397)
      );
    }

    let mapInstance = null;

    async function fetchIP() {
      const ipEl = document.getElementById('ip');
      const detailsEl = document.getElementById('details');
      const mapEl = document.getElementById('ip-tool-map');

      if (!mapEl) return;

      ipEl.textContent = '載入中...';
      detailsEl.innerHTML = '';

      if (mapInstance) {
        mapInstance.remove();
        mapInstance = null;
      }

      try {
        const ipRes = await fetch('https://api.ipify.org?format=json');
        const { ip } = await ipRes.json();
        ipEl.textContent = ip;

        const infoRes = await fetch(`https://ipinfo.io/${ip}/json?token=1b172809b09566`);
        const info = await infoRes.json();

        const infoList = [
          { label: '國家/地區', value: info.country || 'N/A', flag: countryToFlag(info.country) },
          { label: '城市', value: info.city || 'N/A' },
          { label: '區域/州', value: info.region || 'N/A' },
          { label: '郵遞區號', value: info.postal || 'N/A' },
          { label: '網際網路服務供應商 (ISP)', value: info.org || 'N/A' },
          { label: 'GPS 座標', value: info.loc ? info.loc.replace(',', ', ') : '0, 0' },
          { label: '時區', value: info.timezone || 'N/A' },
        ];

        infoList.forEach(item => {
          const box = document.createElement('div');
          box.className = 'ip-tool-detail-box';
          const label = document.createElement('div');
          label.className = 'ip-tool-detail-label';
          label.textContent = item.label;
          if (item.flag) {
            const flagSpan = document.createElement('span');
            flagSpan.className = 'ip-tool-flag';
            flagSpan.textContent = item.flag;
            label.appendChild(flagSpan);
          }
          const value = document.createElement('div');
          value.className = 'ip-tool-detail-value';
          value.textContent = item.value;
          box.appendChild(label);
          box.appendChild(value);
          detailsEl.appendChild(box);
        });

        let [lat, lon] = info.loc ? info.loc.split(",").map(c => parseFloat(c)) : [0, 0];

        mapInstance = L.map('ip-tool-map').setView([lat, lon], 10);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', { maxZoom: 19 }).addTo(mapInstance);
        L.marker([lat, lon]).addTo(mapInstance)
          .bindPopup(`${info.city || '未知地點'}, ${info.country || ''}`)
          .openPopup();

        mapInstance.invalidateSize();

      } catch (err) {
        ipEl.textContent = '載入失敗';
        detailsEl.innerHTML = '<div class="ip-tool-detail-box" style="width:100%; justify-content:center;">無法載入 IP 詳細資訊，請稍後再試。</div>';
        console.error(err);
      }
    }

    window.addEventListener('DOMContentLoaded', () => {
      document.getElementById("reload").onclick = fetchIP;
      fetchIP();
    });
  </script>

</body>
</html>
