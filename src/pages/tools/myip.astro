---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const title = '我的 IP 查詢工具';
---

<!doctype html>
<html lang="zh-Hant">
<head>
  <BaseHead title={title} />

  <!-- Leaflet 地圖套件 -->
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

  <style>
    body {
      margin: 0;
      padding: 0;
      background: #f5f7fb;
      font-family: "Inter", system-ui, sans-serif;
      color: #1f2d3d;
    }

    .main-container {
      max-width: 700px;
      margin: 40px auto;
      padding: 1.5em;
      text-align: center;
    }

    .card {
      background: white;
      padding: 40px;
      border-radius: 18px;
      box-shadow: 0 10px 35px rgba(0,0,0,0.08);
    }

    .ip-title {
      font-size: 1.5rem;
      color: #3a475d;
      margin-bottom: 12px;
      font-weight: 600;
    }

    .ip-address {
      font-size: 2.5rem;
      font-weight: 800;
      color: #2563eb;
      background: #eef4ff;
      padding: 10px 20px;
      border-radius: 12px;
      margin: 0 auto 25px;
      display: inline-block;
    }

    .info-box {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 14px 20px;
      border-radius: 12px;
      margin-bottom: 10px;
      font-size: 1rem;
      transition: transform 0.2s;
    }

    .info-box:hover {
      transform: translateY(-2px);
    }

    #details > .info-box:nth-child(odd) {
      background: #f0f4fa;
    }

    #details > .info-box:nth-child(even) {
      background: #e3ebf5;
    }

    .info-label {
      font-weight: 600;
      color: #55637a;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .info-value {
      font-weight: 600;
      color: #1c2a3a;
      text-align: right;
    }

    .flag {
      font-size: 1.5rem;
    }

    #map {
      width: 100%;
      height: 350px;
      margin-top: 30px;
      border-radius: 14px;
      overflow: hidden;
    }

    .reload-btn {
      margin-top: 25px;
      padding: 12px 32px;
      background: #2563eb;
      color: white;
      border: none;
      border-radius: 10px;
      font-size: 1rem;
      cursor: pointer;
    }

    .data-source {
      margin-top: 30px;
      font-size: 0.85rem;
      color: #55637a;
      text-align: center;
    }

    .data-source a {
      color: #2563eb;
      text-decoration: none;
    }

    .data-source a:hover {
      text-decoration: underline;
    }
  </style>
</head>

<body>
  <Header />

  <main class="main-container">
    <div class="card">
      <div class="ip-title">你的公開 IP 地址</div>
      <div class="ip-address" id="ip">載入中...</div>

      <div id="details"></div>

      <div id="map"></div>
    </div>

    <button class="reload-btn" id="reload">重新整理</button>

    <div class="data-source">
      <p>數據來源：</p>
      <p>
        公開 IP 查詢由 
        <a href="https://www.ipify.org/" target="_blank" rel="noopener noreferrer">ipify</a>
        提供；地理位置資訊由 
        <a href="https://ipinfo.io/" target="_blank" rel="noopener noreferrer">IPinfo</a> 
        提供。
      </p>
    </div>
  </main>

  <Footer />

  <script>
    function countryToFlag(countryCode) {
      if (!countryCode) return "❓";
      return countryCode.toUpperCase().replace(/./g, char => 
        String.fromCodePoint(char.charCodeAt(0) + 127397)
      );
    }

    async function fetchIP() {
      document.getElementById('ip').textContent = '載入中...';
      const ipRes = await fetch('https://api.ipify.org?format=json');
      const { ip } = await ipRes.json();
      document.getElementById('ip').textContent = ip;

      const infoRes = await fetch(`https://ipinfo.io/${ip}/json?token=1b172809b09566`);
      const info = await infoRes.json();

      const detailsEl = document.getElementById('details');
      detailsEl.innerHTML = '';

      const infoList = [
        { label: 'Country', value: info.country, flag: countryToFlag(info.country) },
        { label: 'City', value: info.city },
        { label: 'Region', value: info.region },
        { label: 'ISP', value: info.org },
        { label: 'GPS', value: info.loc ? info.loc.replace(',', ', ') : '0, 0' },
        { label: 'VPN / Proxy', value: info.privacy?.vpn ? '✔ VPN' : '❌ No' }
      ];

      infoList.forEach(item => {
        const box = document.createElement('div');
        box.className = 'info-box';

        const label = document.createElement('div');
        label.className = 'info-label';
        label.textContent = item.label;
        if (item.flag) {
          const flagSpan = document.createElement('span');
          flagSpan.className = 'flag';
          flagSpan.textContent = item.flag;
          label.appendChild(flagSpan);
        }

        const value = document.createElement('div');
        value.className = 'info-value';
        value.textContent = item.value;

        box.appendChild(label);
        box.appendChild(value);
        detailsEl.appendChild(box);
      });

      let [lat, lon] = info.loc ? info.loc.split(",") : [0,0];

      let map = L.map('map').setView([lat, lon], 10);
      L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        maxZoom: 19,
      }).addTo(map);

      L.marker([lat, lon]).addTo(map)
        .bindPopup(`${info.city}, ${info.country}`)
        .openPopup();
    }

    document.getElementById("reload").onclick = fetchIP;
    fetchIP();
  </script>

</body>
</html>
