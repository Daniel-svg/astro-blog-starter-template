---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const title = '我的 IP 查詢工具';
---

<!doctype html>
<html lang="zh-Hant">
<head>
	<BaseHead title={title} />
	
	<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
	<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

	<style>
		body {
			margin: 0;
			padding: 0;
			background: #f5f7fb;
			font-family: "Inter", system-ui, sans-serif;
			color: #1f2d3d;
		}

		.main-container {
			max-width: 800px;
			margin: 40px auto;
			display: flex;
			flex-direction: column;
			align-items: center;
			gap: 20px;
			padding: 1.5em;
		}

		.card {
			background: white;
			padding: 30px;
			border-radius: 18px;
			box-shadow: 0 10px 35px rgba(0,0,0,0.08);
			width: 100%;
			text-align: center;
		}

		.ip-title {
			font-size: 1.4rem;
			color: #3a475d;
			margin-bottom: 12px;
			font-weight: 600;
		}

		.ip-address {
			font-size: 2.5rem;
			font-weight: 800;
			color: #2563eb;
			background: #eef4ff;
			padding: 10px 20px;
			border-radius: 12px;
			display: inline-block;
			margin-bottom: 20px;
		}

		.info-grid {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
			gap: 15px;
			margin-top: 20px;
		}

		.info-box {
			background: #f0f4fa;
			padding: 12px 16px;
			border-radius: 12px;
			box-shadow: 0 2px 5px rgba(0,0,0,0.05);
			text-align: center;
		}

		.info-label {
			font-size: .8rem;
			font-weight: 600;
			color: #55637a;
			text-transform: uppercase;
			margin-bottom: 4px;
			display: block;
		}

		.info-label-flag {
			display: inline-flex;
			align-items: center;
			gap: 6px;
			justify-content: center;
		}

		.flag {
			font-size: 1.5rem;
			vertical-align: middle;
		}

		.info-value {
			font-size: 1rem;
			font-weight: 500;
			color: #1c2a3a;
			padding: 6px 0;
			border-top: 1px solid #dce0eb;
			margin-top: 4px;
		}

		#map {
			width: 100%;
			height: 300px;
			margin-top: 20px;
			border-radius: 14px;
			overflow: hidden;
		}

		.reload-btn {
			margin-top: 20px;
			padding: 10px 28px;
			background: #2563eb;
			color: white;
			border: none;
			border-radius: 10px;
			font-size: .95rem;
			cursor: pointer;
			width: 100%;
			max-width: 200px;
			text-align: center;
		}

		.data-source {
			text-align: center;
			font-size: .85rem;
			color: #55637a;
			margin-top: 10px;
		}

		.data-source a {
			color: #2563eb;
			text-decoration: none;
		}
	</style>
</head>

<body>
	<Header />

	<main class="main-container">

		<div class="card">
			<div class="ip-title">你的公開 IP 地址</div>
			<div class="ip-address" id="ip">載入中...</div>

			<div class="info-grid" id="details"></div>

			<div id="map"></div>
		</div>

		<button class="reload-btn" id="reload">重新整理</button>

		<div class="data-source">
			<p>數據來源：</p>
			<p>
				公開 IP 查詢由 
				<a href="https://www.ipify.org/" target="_blank" rel="noopener noreferrer">ipify</a>
				提供；地理位置資訊由 
				<a href="https://ipinfo.io/" target="_blank" rel="noopener noreferrer">IPinfo</a> 
				提供。
			</p>		
		</div>
	</main>

	<Footer />

<script>
function countryToFlag(countryCode) {
	if (!countryCode) return "❓";
	return countryCode
		.toUpperCase()
		.replace(/./g, char => 
			String.fromCodePoint(char.charCodeAt(0) + 127397)
		);
}

async function fetchIP() {
	document.getElementById('ip').textContent = '載入中...';

	const ipRes = await fetch('https://api.ipify.org?format=json');
	const { ip } = await ipRes.json();

	document.getElementById('ip').textContent = ip;

	const infoRes = await fetch(`https://ipinfo.io/${ip}/json?token=1b172809b09566`);
	const info = await infoRes.json();

	document.getElementById('details').innerHTML = `
		<div class="info-box">
			<div class="info-label info-label-flag">
				Country <span class="flag">${countryToFlag(info.country)}</span>
			</div>
			<div class="info-value">${info.country}</div>
		</div>
		<div class="info-box">
			<div class="info-label">City</div>
			<div class="info-value">${info.city}</div>
		</div>
		<div class="info-box">
			<div class="info-label">Region</div>
			<div class="info-value">${info.region}</div>
		</div>
		<div class="info-box">
			<div class="info-label">ISP</div>
			<div class="info-value">${info.org}</div>
		</div>
		<div class="info-box">
			<div class="info-label">ASN</div>
			<div class="info-value">${info.org?.split(" ")[0] || '-'}</div>
		</div>
		<div class="info-box">
			<div class="info-label">GPS</div>
			<div class="info-value">${info.loc ? info.loc.replace(',', ', ') : '0, 0'}</div>
		</div>
		<div class="info-box">
			<div class="info-label">Timezone</div>
			<div class="info-value">${info.timezone}</div>
		</div>
		<div class="info-box">
			<div class="info-label">VPN / Proxy</div>
			<div class="info-value">
				${info.privacy?.vpn ? '✔ VPN' : '❌ No'}
			</div>
		</div>
	`;

	let [lat, lon] = info.loc ? info.loc.split(",") : [0,0];

	let map = L.map('map').setView([lat, lon], 10);

	L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
		maxZoom: 19,
	}).addTo(map);

	L.marker([lat, lon]).addTo(map)
		.bindPopup(`${info.city}, ${info.country}`)
		.openPopup();
}

document.getElementById("reload").onclick = fetchIP;

fetchIP();
</script>

</body>
</html>
