          { label: 'ç¶²éš›ç¶²è·¯æœå‹™ä¾›æ‡‰å•† (ISP)', value: info.org || 'N/A' },
          { label: 'GPS åº§æ¨™', value: info.loc ? info.loc.replace(',', ', ') : '0, 0' },
          { label: 'æ™‚å€', value: info.timezone || 'N/A' },
        ];

        infoList.forEach(item => {
          const box = document.createElement('div');
          box.className = 'detail-box';
          const label = document.createElement('div');
          label.className = 'detail-label';
          label.textContent = item.label;
          if (item.flag) {
            const flagSpan = document.createElement('span');
            flagSpan.className = 'flag';
            flagSpan.textContent = item.flag;
            label.appendChild(flagSpan);
          }
          const value = document.createElement('div');
          value.className = 'detail-value';
          value.textContent = item.value;
          box.appendChild(label);
          box.appendChild(value);
          detailsEl.appendChild(box);
        });

        let [lat, lon] = info.loc ? info.loc.split(",").map(c => parseFloat(c)) : [0, 0];

        mapInstance = L.map('map').setView([lat, lon], 10);
