---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const title = '我的 IP 查詢工具';
const description = '快速查詢你的公開 IP 地址與地理位置資訊';
---

<!doctype html>
<html lang="zh-Hant">
<head>
  <BaseHead title={title} description={description} />

  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

  <style>
    .ip-tool-container {
      max-width: 780px;
      margin: 40px auto;
      padding: 1.5em;
      text-align: center;
    }

    .ip-tool-card {
      background: white;
      padding: 32px;
      border-radius: 20px;
      box-shadow: 0 12px 40px rgba(0,0,0,0.08);
    }

    .ip-tool-title {
      font-size: 1.6rem;
      color: #2e3a4d;
      font-weight: 700;
      margin-bottom: 12px;
    }

    .ip-tool-address {
      font-size: 2.3rem;
      font-weight: 800;
      color: #1d4ed8;
      background: #eef4ff;
      padding: 10px 22px;
      border-radius: 14px;
      margin: 0 auto 30px;
      display: inline-block;
      word-break: break-all;
    }

    .ip-tool-details-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 16px;
      margin-bottom: 30px;
    }

    .ip-tool-detail-box {
      background: #f2f6ff;
      border: 1px solid #dbe4f3;
      padding: 16px;
      border-radius: 12px;
      box-shadow: 0 3px 8px rgba(0,0,0,0.05);
      transition: all 0.2s;
    }

    .ip-tool-detail-box:hover {
      transform: translateY(-3px);
      box-shadow: 0 6px 16px rgba(0,0,0,0.10);
    }

    .ip-tool-detail-label {
      font-weight: 600;
      font-size: 0.92rem;
      color: #4b5563;
      margin-bottom: 4px;
      display: flex;
      align-items: center;
      gap: 6px;
    }

    .ip-tool-detail-value {
      font-size: 1.15rem;
      color: #111827;
      word-break: break-all;
      font-weight: 700;
    }

    .ip-tool-flag {
      font-size: 1.5rem;
    }

    #ip-tool-map {
      width: 100%;
      height: 350px;
      margin-top: 28px;
      border-radius: 16px;
      overflow: hidden;
    }

    .ip-tool-reload-btn {
      margin-top: 28px;
      padding: 12px 30px;
      background: #2563eb;
      color: white;
      border: none;
      border-radius: 10px;
      font-size: 1rem;
      cursor: pointer;
      transition: background 0.3s;
    }

    .ip-tool-reload-btn:hover {
      background: #1e40af;
    }

    .ip-tool-data-source {
      margin-top: 30px;
      font-size: 0.85rem;
      color: #6b7280;
    }

    @media (max-width: 480px) {
      .ip-tool-card {
        padding: 22px;
      }
      .ip-tool-address {
        font-size: 1.8rem;
      }
      #ip-tool-map {
        height: 280px;
      }
    }
  </style>
</head>

<body>
  <Header />

  <main class="ip-tool-container">
    <div class="ip-tool-card">
      <div class="ip-tool-title">你的公開 IP 地址</div>
      <div class="ip-tool-address" id="ip">載入中...</div>

      <div class="ip-tool-details-grid" id="details"></div>
      <div id="ip-tool-map"></div>
    </div>

    <button class="ip-tool-reload-btn" id="reload">重新整理</button>

    <div class="ip-tool-data-source">
      公開 IP 查詢由 ipify 提供；地理位置資訊由 IPinfo 提供。
    </div>
  </main>

  <Footer />

  <script>
    function countryToFlag(countryCode) {
      if (!countryCode) return "❓";
      return countryCode.toUpperCase().replace(/./g, char =>
        String.fromCodePoint(char.charCodeAt(0) + 127397)
      );
    }

    let mapInstance = null;

    async function fetchIP() {
      const ipEl = document.getElementById('ip');
      const detailsEl = document.getElementById('details');
      const mapEl = document.getElementById('ip-tool-map');

      if (!mapEl) return;

      ipEl.textContent = '載入中...';
      detailsEl.innerHTML = '';

      if (mapInstance) {
        mapInstance.remove();
        mapInstance = null;
      }

      try {
        const ipRes = await fetch('https://api.ipify.org?format=json');
        const { ip } = await ipRes.json();
        ipEl.textContent = ip;

        const infoRes = await fetch(`https://ipinfo.io/${ip}/json?token=1b172809b09566`);
        const info = await infoRes.json();

        const infoList = [
          { label: '國家/地區', value: info.country || 'N/A', flag: countryToFlag(info.country) },
          { label: '城市', value: info.city || 'N/A' },
          { label: '區域/州', value: info.region || 'N/A' },
          { label: '郵遞區號', value: info.postal || 'N/A' },
          { label: '網路供應商 (ISP)', value: info.org || 'N/A' },
          { label: 'GPS 座標', value: info.loc ? info.loc.replace(',', ', ') : '0, 0' },
          { label: '時區', value: info.timezone || 'N/A' },
        ];

        infoList.forEach(item => {
          const box = document.createElement('div');
          box.className = 'ip-tool-detail-box';

          const label = document.createElement('div');
          label.className = 'ip-tool-detail-label';
          label.textContent = item.label;

          if (item.flag) {
            const flagSpan = document.createElement('span');
            flagSpan.className = 'ip-tool-flag';
            flagSpan.textContent = item.flag;
            label.appendChild(flagSpan);
          }

          const value = document.createElement('div');
          value.className = 'ip-tool-detail-value';
          value.textContent = item.value;

          box.appendChild(label);
          box.appendChild(value);
          detailsEl.appendChild(box);
        });

        let [lat, lon] = info.loc ? info.loc.split(',').map(Number) : [0, 0];

        mapInstance = L.map('ip-tool-map').setView([lat, lon], 10);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', { maxZoom: 19 }).addTo(mapInstance);
        L.marker([lat, lon]).addTo(mapInstance)
          .bindPopup(`${info.city || '未知地點'}, ${info.country || ''}`)
          .openPopup();

        setTimeout(() => mapInstance.invalidateSize(), 300);

      } catch (err) {
        ipEl.textContent = '載入失敗';
        detailsEl.innerHTML = '<div class="ip-tool-detail-box">無法載入資料</div>';
      }
    }

    window.addEventListener('DOMContentLoaded', () => {
      document.getElementById('reload').onclick = fetchIP;
      fetchIP();
    });
  </script>
</body>
</html>