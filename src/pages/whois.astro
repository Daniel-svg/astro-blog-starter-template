---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const title = 'IP 查詢工具';
const description = '查詢公開 IP、ISP 與地理位置';
---

<html lang="zh-TW">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      main {
        max-width: 1200px;
        margin: 36px auto;
        padding: 24px;
      }
      .card {
        background: white;
        border: 1px solid #e5e7eb;
        border-radius: 12px;
        padding: 24px;
        margin-bottom: 24px;
      }
      .title {
        font-size: 1.6rem;
        font-weight: bold;
        margin-bottom: 16px;
      }
      .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 16px;
      }
      .item {
        padding: 16px;
        border-radius: 8px;
        background: #f8fafc;
        border: 1px solid #e2e8f0;
      }
      iframe {
        width: 100%;
        height: 350px;
        border: none;
        border-radius: 12px;
      }
       /* 手機 RWD 修正 */
      @media (max-width: 600px) {
        #ip-form {
          flex-direction: column;
        }

        button {
          width: 100%;
        }
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <div class="card">
        <div class="title">IP 查詢工具（Cloudflare 風格）</div>
        <form id="ip-form">
          <input id="ip-input" placeholder="輸入 IP，例如 8.8.8.8" />
          <button>查詢</button>
        </form>
      </div>

      <div class="card">
        <div class="title">查詢結果</div>
        <div class="grid" id="ip-result">
          <!-- 動態填入 -->
        </div>
      </div>

      <div class="card">
        <div class="title">地理位置</div>
        <iframe id="map"></iframe>
      </div>
    </main>
    <Footer />

    <script>
      async function fetchIP(ip) {
        const res = await fetch(`https://ipapi.co/${ip}/json/`);
        return res.json();
      }

      const form = document.querySelector('#ip-form');
      const input = document.querySelector('#ip-input');
      const result = document.querySelector('#ip-result');
      const map = document.querySelector('#map');

      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        const ip = input.value.trim();
        const data = await fetchIP(ip);

        result.innerHTML = `
          <div class="item">IP：${data.ip}</div>
          <div class="item">ISP：${data.org || 'N/A'}</div>
          <div class="item">國家：${data.country_name}</div>
          <div class="item">城市：${data.city}</div>
          <div class="item">緯度：${data.latitude}</div>
          <div class="item">經度：${data.longitude}</div>
        `;

        map.src = `https://maps.google.com/maps?q=${data.latitude},${data.longitude}&z=10&output=embed`;
      });
    </script>
  </body>
</html>
