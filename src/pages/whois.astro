---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const title = 'IP 查詢工具';
const description = '查詢公開 IP、ISP 與地理位置';
---

<html lang="zh-TW">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      main {
       width: min(100% - 2rem, 860px);
       margin: 40px auto;
      }
      main.container {
        width: min(100% - 2rem, 860px);
        margin: 40px auto;
      }
      .card {
        background: white;
        border: 1px solid rgba(0,0,0,0.08);
        border-radius: 14px;
        padding: 24px;
        margin-top: 24px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
      }

      .title {
        font-size: 1.6rem;
        font-weight: bold;
        margin-bottom: 16px;
      }

      #ip-form {
        display: flex;
        gap: 12px;
        width: 100%;
      }

      #ip-input {
        flex: 1;
        padding: 12px;
        border: 1px solid #d1d5db;
        border-radius: 8px;
        box-sizing: border-box;
      }

      button {
        padding: 12px 20px;
        border-radius: 8px;
        border: none;
        background: #494d54ff;
        color: white;
        cursor: pointer;
      }

      button:hover {
        background: #17181aff;
      }

      .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 16px;
      }

      .item {
        padding: 16px;
        border-radius: 8px;
        background: #f8fafc;
        border: 1px solid #e2e8f0;
      }

      iframe {
        width: 100%;
        height: 350px;
        border: none;
        border-radius: 12px;
      }

      @media (max-width: 600px) {
        main {
          padding: 16px;
        }

        #ip-form {
          flex-direction: column;
        }

        #ip-input,
        button {
          width: 100%;
        }
      }
    </style>
  </head>

  <body>
    <Header />
    <main class="container">
      <div class="card">
        <div class="title">IP 查詢工具</div>
        <form id="ip-form">
          <input id="ip-input" placeholder="輸入 IP，例如 8.8.8.8" />
          <button>查詢</button>
        </form>
      </div>

      <div class="card">
        <div class="title">查詢結果</div>
        <div class="grid" id="ip-result">
          <!-- 動態填入 -->
        </div>
      </div>

      <div class="card">
        <div class="title">地理位置</div>
        <iframe id="map"></iframe>
      </div>
    </main>
    <Footer />

    <script>
      async function fetchIP(ip) {
        const res = await fetch("https://ipapi.co/" + ip + "/json/");
        return res.json();
      }

      const form = document.querySelector("#ip-form");
      const input = document.querySelector("#ip-input");
      const result = document.querySelector("#ip-result");
      const map = document.querySelector("#map");

      form.addEventListener("submit", async function (e) {
        e.preventDefault();
        const ip = input.value.trim();
        const data = await fetchIP(ip);

        result.innerHTML =
          '<div class="item">IP：' + data.ip + "</div>" +
          '<div class="item">ISP：' + (data.org || "N/A") + "</div>" +
          '<div class="item">國家：' + data.country_name + "</div>" +
          '<div class="item">城市：' + data.city + "</div>" +
          '<div class="item">緯度：' + data.latitude + "</div>" +
          '<div class="item">經度：' + data.longitude + "</div>";

        map.src =
          "https://maps.google.com/maps?q=" +
          data.latitude +
          "," +
          data.longitude +
          "&z=10&output=embed";
      });
    </script>
  </body>
</html>
