---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const title = 'IP 查詢工具';
const description = '查詢公開 IP、ISP 與地理位置';
---
<html lang="zh-Hant">
  <head>
    <BaseHead title={title} description={description} />
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css">
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" defer></script>
  </head>

  <body>
    <Header />

    <main class="container">
      <!-- ===== Top Card ===== -->
      <div class="cf-card top">
        <div class="left">
          <div class="label">你的公開 IP</div>
          <div id="ip" class="big-ip">載入中...</div>

          <div class="actions">
            <button id="copyBtn" class="btn">Copy</button>
            <button id="refreshBtn" class="btn">Refresh</button>
          </div>

          <div id="isp" class="meta">ISP：—</div>
          <div id="loc" class="meta">位置：—</div>
          <div id="tz" class="meta">時區：—</div>
          <div id="asn" class="meta">ASN：—</div>
        </div>

        <div class="map-wrap">
          <div id="map"></div>
        </div>
      </div>

      <!-- ===== Info Cards ===== -->
      <div class="cf-card">
        <h3>詳細資訊</h3>

        <div class="info-grid">
          <div class="item">
            <div class="label">城市</div>
            <div id="city" class="value">—</div>
          </div>

          <div class="item">
            <div class="label">國家</div>
            <div id="country" class="value">—</div>
          </div>

          <div class="item">
            <div class="label">區域</div>
            <div id="region" class="value">—</div>
          </div>

          <div class="item">
            <div class="label">郵遞區號</div>
            <div id="postal" class="value">—</div>
          </div>

          <div class="item">
            <div class="label">座標</div>
            <div id="coord" class="value">—</div>
          </div>
        </div>
      </div>

      <p class="source">資料來源：ipinfo.io • ipify • OpenStreetMap</p>
    </main>

    <Footer />

    <!-- ===== JS ===== -->
    <script>
      async function loadIP() {
        const res = await fetch("https://ipinfo.io/json?token=1b172809b09566");
        const d = await res.json();

        const [lat, lon] = d.loc.split(",");

        // ========== 基本資訊 ==========
        document.getElementById("ip").textContent = d.ip;
        document.getElementById("isp").textContent = "ISP：" + (d.org || "未知");
        document.getElementById("loc").textContent = "位置：" + d.city + ", " + d.country;
        document.getElementById("tz").textContent = "時區：" + d.timezone;

        // org → AS12345 Something ISP
        const asn = d.org?.split(" ")[0] || "未知";
        document.getElementById("asn").textContent = "ASN：" + asn;

        // ========== 詳細 ==========
        document.getElementById("city").textContent = d.city;
        document.getElementById("country").textContent = d.country;
        document.getElementById("region").textContent = d.region;
        document.getElementById("postal").textContent = d.postal || "—";
        document.getElementById("coord").textContent = d.loc;

        // ========== 地圖 ==========
        const map = L.map("map").setView([lat, lon], 11);
        L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png").addTo(map);
        L.marker([lat, lon]).addTo(map);
      }

      loadIP();

      // 按鈕：複製
      document.getElementById("copyBtn").onclick = () => {
        navigator.clipboard.writeText(document.getElementById("ip").textContent);
      };

      // 按鈕：刷新
      document.getElementById("refreshBtn").onclick = () => {
        loadIP();
      };
    </script>

    <!-- ===== Cloudflare UI Style ===== -->
    <style>
      main.container {
        width: min(100% - 2rem, 860px);
        margin: 40px auto;
      }

      .cf-title h1 {
        margin: 0;
        font-size: 2rem;
        font-weight: 700;
      }

      .cf-title .sub {
        margin-top: 4px;
        color: #6b7280;
      }

      .cf-card {
        background: white;
        border: 1px solid rgba(0,0,0,0.08);
        border-radius: 14px;
        padding: 24px;
        margin-top: 24px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
      }

      .cf-card.top {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 24px;
      }

      .label {
        color: #6b7280;
        font-size: 0.85rem;
        margin-bottom: 4px;
      }

      .big-ip {
        font-size: 1.8rem;
        font-weight: 800;
        margin-bottom: 12px;
      }

      .actions {
        display: flex;
        gap: 10px;
        margin-bottom: 14px;
      }

      .btn {
        padding: 8px 14px;
        border-radius: 8px;
        border: 1px solid #d1d5db;
        cursor: pointer;
        background: #f9fafb;
      }

      .btn:hover {
        background: #eef0f2;
      }

      .meta {
        margin-top: 4px;
        color: #374151;
        font-size: 0.9rem;
      }

     /* 修正地圖在手機超出卡片寬度 */
      .map-wrap {
        width: 100%;
        overflow: hidden;       /* 防止地圖溢出 */
        border-radius: 12px;
      }

      #map {
        width: 100% !important; /* 強制地圖跟著卡片寬度 */
        height: 260px;
        border-radius: 12px;
      }

      .info-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 16px;
        margin-top: 18px;
      }

      .value {
        font-size: 1rem;
        font-weight: 700;
      }

      @media (max-width: 780px) {
        .cf-card.top {
          grid-template-columns: 1fr;
        }

         .map-wrap {
          margin-top: 12px;
      }
      .source {
        text-align: center !important;
        color: #6b7280 !important;
        margin-top: 12px !important;
        font-size: 0.9rem !important;
      }
      }
    </style>
  </body>
</html>
